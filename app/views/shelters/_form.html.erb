<%= form_for @shelter do |f| %>
  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  <% end %>
  
  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :postcode %>
    <%= f.text_field :postcode, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :address %>
    <%= f.text_field :address, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :suburb %>
    <%= f.text_field :suburb, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :state %>
    <%= f.text_field :state, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :shelter_type_id %>
    <%= f.select(:shelter_type_id, ShelterType.all.pluck(:type_name,:id), {}, { :class => 'form-control'}) %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :image %>
    <%= f.url_field :image, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :url , 'Website' %>
    <%= f.url_field :url, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :phone %>
    <%= f.text_field :phone, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :email %>
    <%= f.email_field :email, :class => 'form-control' %>
  <% end %>

  <%= f.submit :class => 'btn btn-primary'%>
<% end %>


