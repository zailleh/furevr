<div class="row">
<% @shelters.each do |s| %>
  <div class="col-md-4">
    <div class="card pet shadow-sm">
      <a class="cardlink" href="/shelters/<%= s.id %>"></a>        
      <div class="row pt-2 pl-4 pr-2">
        <div class="icon shelter"> </div>
        <div class="col">
          <div class="row"><h5 class="card-title"><%= s.name %></h5></div>
          <div class="row">
            <%= content_tag :p, s.shelter_type.type_name, :class => 'card-subtitle mb-2 text-muted' %>
          </div>
        </div>
      </div>
      <%= image_tag s.image, :class => 'card-img-bottom' %>
    </div>
  </div>
<% end %>
</div>

